se><tab_sql><sql name="SQL 1*">SELECT 
	p.id AS id_paziente,
    rf_last.id AS id_rilevazione_farmaco,
    f.id AS id_farmaco,
	f.codice_aic AS codice_aic,
	f.nome as nome_farmaco
FROM paziente p
INNER JOIN patologia_paziente pp ON p.id = pp.id_paziente
INNER JOIN terapia t ON pp.id_terapia = t.id
INNER JOIN farmaco f ON t.id_farmaco = f.id

-- get last rilevazione_farmaco as a reference to insert into alert
INNER JOIN (
    SELECT rf1.*
    FROM rilevazione_farmaco rf1
    WHERE rf1.timestamp = (
        SELECT MAX(rf2.timestamp)
        FROM rilevazione_farmaco rf2
        WHERE rf2.id_paziente = rf1.id_paziente
          AND rf2.id_farmaco = rf1.id_farmaco
		  --AND DATE(rf1.timestamp) &gt;= DATE('now', '-2 days') -- includes today, yesterday, day before
    )
) rf_last ON rf_last.id_paziente = p.id AND rf_last.id_farmaco = f.id

-- Ensure the farmaco has NOT been taken in the last 3 days (inclusive of today)

AND NOT EXISTS (
    SELECT 1
    FROM rilevazione_farmaco rf
    WHERE rf.id_paziente = p.id
      AND rf.id_farmaco = f.id
      AND DATE(rf.timestamp) &gt;= DATE('now', '-2 days') -- includes today, yesterday, day before
)


-- Ensure no alert already exists for this missed drug
AND NOT EXISTS (
    SELECT 1
    FROM alert a
    WHERE a.id_paziente = p.id
      AND a.tipo_alert = 'farmacoNonAssuntoDa3Giorni'
      AND a.id_rilevazione = rf_last.id -- check if there is already an alert associated with this rilevazione (to not generate duplicated alerts)
)
</sql><current_tab id="0"/></tab_sql></sqlb_project>
