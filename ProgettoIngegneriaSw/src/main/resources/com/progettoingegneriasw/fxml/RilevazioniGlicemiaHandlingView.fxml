<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.progettoingegneriasw.controller.RilevazioniGlicemiaHandlingController">
    <BorderPane xmlns="http://javafx.com/javafx/17" VBox.vgrow="ALWAYS" xmlns:fx="http://javafx.com/fxml/1">
        <center>
            <HBox alignment="CENTER" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS" spacing="10">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>

                <VBox alignment="CENTER" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS" spacing="10">
                    <VBox alignment="CENTER" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS" prefHeight="300" prefWidth="250" styleClass="card, container" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
                        <children>
                            <Label text="Rilevazioni livelli glicemici" textAlignment="CENTER">
                                <font>
                                    <Font name="System Bold" size="24.0" />
                                </font>
                                <VBox.margin>
                                    <Insets bottom="20.0" />
                                </VBox.margin>
                            </Label>
                        </children>

                        <TableView fx:id="tableViewRilevazioni" VBox.vgrow="ALWAYS" >
                            <columns>
                                <TableColumn prefWidth="100.0" text="Id" fx:id="id" />
                                <TableColumn prefWidth="100.0" text="Timestamp" fx:id="timestamp" />
                                <TableColumn prefWidth="100.0" text="Valore (mg/l)" fx:id="valore" />
                                <TableColumn prefWidth="100.0" text="Entita di rischio" fx:id="gravita" />
                                <TableColumn prefWidth="100.0" text="Prima del pasto" fx:id="primaPasto" />
                            </columns>
                        </TableView>

                        <padding>
                            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                        </padding>
                    </VBox>

                </VBox>


                <VBox alignment="CENTER" HBox.hgrow="ALWAYS" prefHeight="600" prefWidth="450" styleClass="card, container" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
                    <children>
                        <Label text="Statistiche" textAlignment="CENTER">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                            <VBox.margin>
                                <Insets bottom="20.0" />
                            </VBox.margin>
                        </Label>

                        <AnchorPane layoutX="379.0" layoutY="153.0" prefHeight="400.0" prefWidth="500.0" style="-fx-background-color: #F5F5F5;">
                            <effect>
                                <DropShadow />
                            </effect>
                            <children>
                                <LineChart fx:id="lineChart" layoutX="-2.0" prefHeight="400.0" prefWidth="500.0" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"  AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                                    <xAxis>
                                        <CategoryAxis fx:id="xAxis" side="BOTTOM" />
                                    </xAxis>
                                    <yAxis>
                                        <NumberAxis fx:id="yAxis" side="LEFT" />
                                    </yAxis>
                                </LineChart>
                            </children>
                        </AnchorPane>

                        <VBox styleClass="card" spacing="20" HBox.hgrow="ALWAYS" fx:id="pannelloVisualizzaRisultato" visible="false">
                            <children>
                                <Label text="" textAlignment="CENTER" fx:id="labelRisultato" />
                            </children>
                        </VBox>

                    </children>
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                </VBox>

            </HBox>
        </center>
    </BorderPane>
