<?import javafx.scene.text.Font?>
<?import javafx.collections.FXCollections?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.progettoingegneriasw.controller.RilevazioniHandlingController">
    <BorderPane xmlns="http://javafx.com/javafx/17" VBox.vgrow="ALWAYS" xmlns:fx="http://javafx.com/fxml/1">
        <center>
            <HBox alignment="CENTER" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS" spacing="10">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>

                <VBox alignment="CENTER" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS" spacing="10">
                    <VBox alignment="CENTER" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS" prefHeight="300" prefWidth="400" styleClass="card, container" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
                        <children>
                            <Label text="Rilevazioni" textAlignment="CENTER">
                                <font>
                                    <Font name="System Bold" size="24.0" />
                                </font>
                                <VBox.margin>
                                    <Insets bottom="20.0" />
                                </VBox.margin>
                            </Label>
                            <HBox alignment="CENTER_RIGHT" spacing="10.0" fx:id="">
                                <Button text="&#10133; Nuova" fx:id="nuovaRilevazioneButton" onMouseClicked="#handleNuovaRilevazione" />
                            </HBox>
                        </children>

                        <TableView fx:id="tableViewRilevazioniFarmaci" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn prefWidth="100.0" text="Timestamp" fx:id="timestamp" />
                                <TableColumn prefWidth="100.0" text="Nome" fx:id="nome" />
                                <TableColumn prefWidth="100.0" text="Codice AIC" fx:id="codiceAic" />
                                <TableColumn prefWidth="100.0" text="Quantità" fx:id="quantita" />
                                <TableColumn prefWidth="100.0" text="Note" fx:id="noteRilevazione" />
                            </columns>
                        </TableView>

                        <TableView fx:id="tableViewRilevazioniGlicemia" VBox.vgrow="ALWAYS">
                            <columns>
                                <!-- <TableColumn prefWidth="100.0" text="Timestamp" fx:id="timestamp" /> -->
                                <TableColumn prefWidth="100.0" text="Valore glicemico" fx:id="valore" />
                                <TableColumn prefWidth="100.0" text="Livello di allerta" fx:id="gravita" />
                                <TableColumn prefWidth="100.0" text="Prima del pasto" fx:id="primaPasto" />
                            </columns>
                        </TableView>

                        <TableView fx:id="tableViewRilevazioniSintomi" VBox.vgrow="ALWAYS">
                            <columns>
                                <!-- <TableColumn prefWidth="100.0" text="Timestamp" fx:id="timestamp" /> -->
                                <TableColumn prefWidth="100.0" text="Sintomo" fx:id="sintomo" />
                                <TableColumn prefWidth="100.0" text="Intensità sintomo" fx:id="intensita" />
                            </columns>
                        </TableView>

                        <padding>
                            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                        </padding>
                    </VBox>
                </VBox>


                <VBox alignment="CENTER" HBox.hgrow="ALWAYS" prefHeight="600" prefWidth="300" styleClass="card, container" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:id="VBoxNuovaRilevazione" visible="false" managed="false">
                    <children>
                        <Label text="Inserisci nuova rilevazione" textAlignment="CENTER">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                            <VBox.margin>
                                <Insets bottom="20.0" />
                            </VBox.margin>
                        </Label>

                        <!-- Da utilizzare opportunamente in caso di necessità di comunicazione di scorretto inserimento
                        di info della terapia-->
                        <Label fx:id="statusLabel" styleClass="alert-danger" text="Status message goes here" wrapText="true" visible="false" managed="true">
                            <VBox.margin>
                                <Insets bottom="10.0" />
                            </VBox.margin>
                        </Label>

                        <ComboBox fx:id="comboBox" onAction="#onComboBoxChanged">
                            <items>
                                <FXCollections fx:factory="observableArrayList">
                                    <String fx:value="Rilevazione glicemia" />
                                    <String fx:value="Rilevazione assunzione farmaco" />
                                    <String fx:value="Rilevazione sintomo" />
                                </FXCollections>
                            </items>
                        </ComboBox>

                        <!-- Da gestire con i campi corretti delle rispettive rilevazioni, permettere l'inserimento sulla base
                        della scelta nella comboBox definita

                        <VBox spacing="10.0" visible="false" fx:id="VBoxDosiGiornaliere">
                            <children>
                                <Label styleClass="form-label" text="Dosi Giornaliere" />
                                <TextField fx:id="dosiGiornaliereUpdate" promptText="Inserisci dosi giornaliere" styleClass="form-control" />
                            </children>
                            <VBox.margin>
                                <Insets bottom="10.0" />
                            </VBox.margin>
                        </VBox>

                        <VBox spacing="10.0" visible="false" fx:id="VBoxQuantitaPerDose">
                            <children>
                                <Label styleClass="form-label" text="Quantità per dose" />
                                <TextField fx:id="quantitaPerDoseUpdate" promptText="Inserisci quantità per dose" styleClass="form-control" />
                            </children>
                            <VBox.margin>
                                <Insets bottom="20.0" />
                            </VBox.margin>
                        </VBox>

                        <VBox spacing="10.0" visible="false" fx:id="VBoxNote">
                            <children>
                                <Label styleClass="form-label" text="Note" />
                                <TextField fx:id="noteUpdate" promptText="Inserisci note" styleClass="form-control" />
                            </children>
                            <VBox.margin>
                                <Insets bottom="20.0" />
                            </VBox.margin>
                        </VBox>
                        -->

                        <!-- onAction="#handleUpdate"
                        <Button defaultButton="true" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Inserisci">
                            <VBox.margin>
                                <Insets bottom="10.0" />
                            </VBox.margin>
                        </Button>
                        -->
                    </children>
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                </VBox>

            </HBox>
        </center>
    </BorderPane>
</VBox>
