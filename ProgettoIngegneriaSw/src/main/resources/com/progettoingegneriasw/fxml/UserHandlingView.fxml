<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.shape.Rectangle?>

<?import javafx.scene.text.Font?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.progettoingegneriasw.controller.UserHandlingController">
    <BorderPane xmlns="http://javafx.com/javafx/17" VBox.vgrow="ALWAYS" xmlns:fx="http://javafx.com/fxml/1">
        <center>
            <HBox alignment="CENTER" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS" spacing="10">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>

                <VBox alignment="CENTER" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS" spacing="10">
                    <!--
                    <BorderPane prefHeight="150" prefWidth="200" style="-fx-background-color: lightblue; -fx-border-color: black; -fx-border-width: 2;">
                    </BorderPane>
                    -->

                    <VBox alignment="CENTER" HBox.hgrow="ALWAYS" fx:id="boxdatipaziente" prefHeight="300" prefWidth="500" styleClass="card, container" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">                        <!-- Vista 1: dati statici -->
                        <VBox fx:id="datiViewBox" spacing="5" alignment="CENTER">
                            <Label text="Dati paziente" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                            <Label fx:id="label1" text="" />
                            <Label fx:id="label2" text="" />
                            <Label fx:id="label3" text="" />
                            <Label fx:id="label4" text="" />

                            <Button text="Modifica dati" onAction="#showDatiEditBox" />
                        </VBox>

                        <!-- Vista 2: campi modificabili -->
                        <VBox fx:id="datiEditBox" spacing="5" alignment="CENTER" visible="false" managed="false">
                            <Label text="Dati paziente" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                            <TextField fx:id="nomeField" promptText="Nome" />
                            <TextField fx:id="cognomeField" promptText="Cognome" />
                            <TextField fx:id="emailField" promptText="Email" />
                            <TextField fx:id="pesoField" promptText="Peso in kg" />
                            <TextArea fx:id="noteArea" promptText="Note paziente" prefRowCount="3" wrapText="true" />

                            <Button text="Salva Modifiche" onAction="#handleSalvaDatiPaziente" />
                        </VBox>
                    </VBox>


                    <VBox alignment="CENTER" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS" prefHeight="300" prefWidth="600" styleClass="card, container" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
                        <children>
                            <Label text="Terapie" textAlignment="CENTER">
                                <font>
                                    <Font name="System Bold" size="24.0" />
                                </font>
                                <VBox.margin>
                                    <Insets bottom="20.0" />
                                </VBox.margin>
                            </Label>
                        </children>

                        <TableView fx:id="tableViewTerapie" VBox.vgrow="ALWAYS" onMouseClicked="#handleTerapie" >
                            <columns>
                                <TableColumn prefWidth="100.0" text="Dosi giornaliere" fx:id="dosiGiornaliere" />
                                <TableColumn prefWidth="100.0" text="Quantità per dose" fx:id="quantitaPerDose" />
                                <TableColumn prefWidth="100.0" text="Note" fx:id="note" />
                                <TableColumn prefWidth="100.0" text="Farmaco" fx:id="Nome_farmaco" />
                                <TableColumn prefWidth="100.0" text="Codice AIC" fx:id="Codice_aic" />
                            </columns>
                        </TableView>

                        <padding>
                            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                        </padding>
                    </VBox>

                </VBox>

                <VBox alignment="CENTER" HBox.hgrow="ALWAYS" prefHeight="600" prefWidth="300" styleClass="card, container" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
                    <children>
                        <Label text="Rilevazioni" textAlignment="CENTER">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                            <VBox.margin>
                                <Insets bottom="20.0" />
                            </VBox.margin>
                        </Label>

                        <TableView fx:id="tableViewRilevazioniFarmaci" VBox.vgrow="ALWAYS" onMouseClicked="#handleRilevazioniFarmaci" >
                            <columns>
                                <TableColumn prefWidth="100.0" text="Timestamp" fx:id="timestamp" />
                                <TableColumn prefWidth="100.0" text="Nome" fx:id="nome" />
                                <TableColumn prefWidth="100.0" text="Codice AIC" fx:id="codiceAic" />
                                <TableColumn prefWidth="100.0" text="Quantità" fx:id="quantita" />
                                <TableColumn prefWidth="100.0" text="Note" fx:id="noteRilevazione" />
                            </columns>
                        </TableView>

                        <TableView fx:id="tableViewRilevazioniGlicemia" VBox.vgrow="ALWAYS" onMouseClicked="#handleRilevazioniGlicemia" >
                            <columns>
                                <!-- <TableColumn prefWidth="100.0" text="Timestamp" fx:id="timestamp" /> -->
                                <TableColumn prefWidth="100.0" text="Valore glicemico" fx:id="valore" />
                                <TableColumn prefWidth="100.0" text="Livello di allerta" fx:id="gravita" />
                                <TableColumn prefWidth="100.0" text="Prima del pasto" fx:id="primaPasto" />
                            </columns>
                        </TableView>

                        <TableView fx:id="tableViewRilevazioniSintomi" VBox.vgrow="ALWAYS" onMouseClicked="#handleRilevazioniSintomi" >
                            <columns>
                            <!-- <TableColumn prefWidth="100.0" text="Timestamp" fx:id="timestamp" /> -->
                            <TableColumn prefWidth="100.0" text="Sintomo" fx:id="sintomo" />
                            <TableColumn prefWidth="100.0" text="Intensità sintomo" fx:id="intensita" />
                        </columns>
                        </TableView>
                    </children>

                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                </VBox>


            </HBox>
        </center>
    </BorderPane>
</VBox>