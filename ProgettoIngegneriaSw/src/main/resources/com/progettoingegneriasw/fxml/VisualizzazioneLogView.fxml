<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.progettoingegneriasw.controller.VisualizzazioneLogController">

    <children>
        <BorderPane VBox.vgrow="ALWAYS">
            <center>
                <VBox alignment="CENTER" spacing="10">
                    <padding>
                        <Insets top="20" right="20" bottom="20" left="20"/>
                    </padding>

                    <Label text="Log di sistema" styleClass="card-header" />

                    <TableView fx:id="logTable" prefHeight="400.0">
                        <columns>
                            <TableColumn fx:id="idCol" text="ID" />
                            <TableColumn fx:id="pazienteUsernameCol" text="Paziente" />
                            <TableColumn fx:id="medicoUsernameCol" text="Medico" />
                            <TableColumn fx:id="azioneCol" text="Azione" />
                            <TableColumn fx:id="timestampCol" text="Timestamp" />
                        </columns>
                    </TableView>

                    <HBox spacing="10" alignment="CENTER">
                        <Button fx:id="indietroButton" text="← Indietro" onAction="#handleIndietro"/>
                        <Label fx:id="paginaCorrenteLabel" text="Pagina: 1"/>
                        <Button fx:id="avantiButton" text="Avanti →" onAction="#handleAvanti"/>
                    </HBox>
                </VBox>
            </center>
        </BorderPane>
    </children>
</VBox>
