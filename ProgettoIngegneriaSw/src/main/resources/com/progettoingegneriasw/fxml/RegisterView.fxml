<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" maxWidth="500.0" styleClass="card, container"
      xmlns="http://javafx.com/javafx/16"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.progettoingegneriasw.controller.RegisterController">

   <children>
      <Label text="Registrazione utente" textAlignment="CENTER">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin>
      </Label>

      <Label fx:id="statusLabel" styleClass="status-label">
      <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </Label>

      <!-- Selezione tipo utente -->
      <HBox spacing="10" alignment="CENTER">
         <children>
            <Label text="Tipo utente" />
            <RadioButton fx:id="radioPaziente" text="Paziente" />
            <RadioButton fx:id="radioMedico" text="Medico" />
            <RadioButton fx:id="radioAdmin" text="Admin"  />
         </children>
         <VBox.margin>
            <Insets bottom="15.0" />
         </VBox.margin>
      </HBox>

      <!-- Campi comuni -->
      <VBox spacing="10">
         <children>
            <TextField fx:id="usernameField" promptText="Username" />
            <PasswordField fx:id="passwordField" promptText="Password" />
            <PasswordField fx:id="confirmPasswordField" promptText="Conferma password" />
            <TextField fx:id="nomeField" promptText="Nome" />
            <TextField fx:id="cognomeField" promptText="Cognome" />
         </children>
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </VBox>

      <!-- Campi per Medico -->
      <VBox fx:id="medicoVBox" spacing="10" visible="false" managed="false">
         <children>
            <TextField fx:id="emailMedicoField" promptText="Email del medico" />
         </children>
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </VBox>

      <!-- Campi per Paziente -->
      <VBox fx:id="pazienteVBox" spacing="10" visible="false" managed="false">
         <children>
            <ComboBox fx:id="diabetologoComboBox" promptText="Diabetologo di riferimento"
                      maxWidth="Infinity" />
            <TextField fx:id="emailPazienteField" promptText="Email del paziente" />
            <TextField fx:id="pesoField" promptText="Peso (Kg)" />
            <TextField fx:id="provinciaField" promptText="Provincia di residenza (sigla)" />
            <TextField fx:id="comuneField" promptText="Comune di residenza" />
            <DatePicker fx:id="dataNascitaPicker" promptText="Data di nascita" />
         </children>
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </VBox>

      <!-- Pulsante registrazione -->
      <Button fx:id="registerButton" text="Registrati" defaultButton="true"
              maxWidth="Infinity" onAction="#handleRegister">
         <VBox.margin>
            <Insets bottom="15.0" />
         </VBox.margin>
      </Button>

   </children>

   <padding>
      <Insets top="20" right="20" bottom="20" left="20" />
   </padding>
</VBox>
