<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<ScrollPane fitToHeight="true" fitToWidth="true" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.progettoingegneriasw.controller.ProfileController">
   <content>
      <VBox spacing="20.0" styleClass="container">
         <children>
      <Label text="Profilo Utente" textAlignment="CENTER">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <VBox alignment="CENTER" spacing="15" styleClass="card">
         <children>
            <Label styleClass="card-header" text="Informazioni personali" />

            <!-- Image container & Contatta Diabetologo button -->
            <HBox alignment="CENTER_LEFT" spacing="10" HBox.hgrow="ALWAYS">
               <VBox alignment="CENTER" spacing="10">
                  <ImageView fx:id="profileImage" fitHeight="400" fitWidth="400" preserveRatio="true" styleClass="profile-image" />
                  <Button onAction="#handleCambiaImmagine" style="-fx-background-color: #cccccc; -fx-text-fill: black;" text="Cambia immagine profilo" />
               </VBox>

               <VBox alignment="TOP_RIGHT" HBox.hgrow="ALWAYS">
                  <Button fx:id="contactDoctorButton" onAction="#handleContattaDiabetologo" style="-fx-background-color: #2a9d8f; -fx-text-fill: white;" text="Contatta Diabetologo">
                     <HBox.margin>
                        <Insets right="20" top="10" />
                     </HBox.margin>
                  </Button>

               </VBox>
            </HBox>

            <!-- Username and other info -->
            <GridPane hgap="10" vgap="5">
               <columnConstraints>
                  <ColumnConstraints halignment="RIGHT" />
                  <ColumnConstraints halignment="LEFT" />
               </columnConstraints>

               <rowConstraints>
                  <RowConstraints valignment="CENTER" />
               </rowConstraints>

               <children>
                  <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                  <Label fx:id="usernameLabel" text="username" GridPane.columnIndex="1" GridPane.rowIndex="0">
                           <font>
                              <Font name="System Bold Italic" size="13.0" />
                           </font>
                  </Label>
               </children>
            </GridPane>

         </children>

         <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
         </padding>
      </VBox>

      <VBox styleClass="card">
         <children>
            <Label styleClass="card-header" text="Cambia Password" />
            <Label fx:id="statusLabel" managed="false" styleClass="alert-success" text="Status message" visible="false" wrapText="true">
            </Label>
            <VBox>
               <children>
                  <Label styleClass="form-label" text="Nuova Password" />
                  <PasswordField fx:id="newPasswordField" promptText="Inserisci nuova password" styleClass="form-control" />
               </children>
               <padding>
                  <Insets top="10.0" />
               </padding>
            </VBox>
            <VBox spacing="10.0">
               <children>
                  <Label styleClass="form-label" text="Conferma nuova password" />
                  <PasswordField fx:id="confirmPasswordField" promptText="Conferma nuova password" styleClass="form-control" />
               </children>
               <padding>
                  <Insets top="10.0" />
               </padding>
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </VBox>
            <Button mnemonicParsing="false" onAction="#handleUpdatePassword" styleClass="button-success" text="Aggiorna Password" />
         </children>
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
      </VBox>
      <Button mnemonicParsing="false" onAction="#handleBackToDashboard" text="Dashboard" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </content>
</ScrollPane>
