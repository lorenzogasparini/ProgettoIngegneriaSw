<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.text.Font?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.progettoingegneriasw.controller.AlertsHandlingController">
    <BorderPane xmlns="http://javafx.com/javafx/17" VBox.vgrow="ALWAYS" xmlns:fx="http://javafx.com/fxml/1">
        <center>
            <HBox alignment="CENTER" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS" spacing="10">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>

                <VBox alignment="CENTER" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS" spacing="10">
                    <VBox alignment="CENTER" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS" prefHeight="300" prefWidth="400" styleClass="card, container" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
                        <children>
                            <Label text="Lista Alerts" textAlignment="CENTER">
                                <font>
                                    <Font name="System Bold" size="24.0" />
                                </font>
                                <VBox.margin>
                                    <Insets bottom="20.0" />
                                </VBox.margin>
                            </Label>
                        </children>

                        <!-- Da inserire come lista (ordinabile per data, magari e per tipologia di alert) e con settabile il visto o non visto, da gestire anche l'onClick per ottenere l'effetto letto/non letto -->

                        <TableView fx:id="tableView" VBox.vgrow="ALWAYS" >
                            <columns>
                                <TableColumn prefWidth="75.0" text="Id" fx:id="Id" />
                                <TableColumn prefWidth="100.0" text="Id paziente" fx:id="idPaziente" />
                                <TableColumn prefWidth="100.0" text="Id rilevazione" fx:id="idRilevazione" />
                                <TableColumn prefWidth="100.0" text="Tipologia alert" fx:id="tipoAlert" />
                                <TableColumn prefWidth="100.0" text="Data alert" fx:id="timestamp" />
                                <TableColumn prefWidth="100.0" text="Visto" fx:id="letto" />
                            </columns>
                        </TableView>

                        <padding>
                            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                        </padding>
                    </VBox>

                </VBox>
            </HBox>
        </center>
    </BorderPane>
</VBox>